{
    "name": "express-template",
    "version": "0.0.1",
    "description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
    "main": "server.js",
    "scripts": {
        "start": "node dist/server.js",
        "build": "tsc",
        "test": "jest --coverage=false --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build:watch\" \"npm run serve:watch\"",
        "serve:watch": "nodemon dist/server.js",
        "build:watch": "tsc -w",
        "serve:debug": "nodemon --inspect dist/server.js",
        "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build:watch\" \"npm run serve:debug\"",
        "check:lint": "eslint src/*.ts",
        "check:types": "tsc --noEmit",
        "check:fmt": "prettier src/*.ts --check",
        "check:all": "npm run check:lint && npm run check:types && npm run check:fmt",
        "fix:lint": "eslint src/*.ts --fix",
        "fix:fmt": "prettier src/*.ts  --write",
        "fix:all": "npm run fix:lint && npm run fix:fmt",
        "mint:signingpair": "npx ts-node src/scripts/mint.ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "commander": "^8.3.0",
        "express": "^4.16.2",
        "express-prometheus-middleware": "^1.2.0",
        "helmet": "^4.6.0",
        "http-errors": "^1.7.1",
        "lightship": "^6.7.2",
        "morgan": "^1.9.1",
        "pg": "^8.7.1",
        "prom-client": "12",
        "pug": "^3.0.1",
        "tweetnacl": "^1.0.3",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/express-prometheus-middleware": "1.2.1",
        "@types/http-errors": "1.8.2",
        "@types/jest": "26.0.24",
        "@types/morgan": "1.9.3",
        "@types/node": "14.18.9",
        "@types/pg": "8.6.4",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "concurrently": "6.5.1",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.25.4",
        "jest": "26.6.3",
        "nodemon": "2.0.15",
        "prettier": "2.5.1",
        "supertest": "6.2.2",
        "ts-jest": "26.5.6",
        "ts-node": "10.4.0",
        "typescript": "4.5.5"
    }
}
